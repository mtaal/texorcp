<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.eclipse.emf.texo.examples.rcp.application.TexoRCPApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.eclipse.emf.texo.examples.rcp.application.Perspective"
            id="TexoRCP.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="org.eclipse.emf.texo.examples.rcp.views.View"
            id="org.eclipse.emf.texo.examples.rcp.views.view">
      </view>
      <view
            class="org.eclipse.emf.texo.examples.rcp.views.EditorView"
            id="org.eclipse.emf.texo.examples.rcp.views.edutirview"
            name="Editor View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="org.eclipse.emf.texo.examples.rcp.views.view">
         </view>
         <view
               id="org.eclipse.emf.texo.examples.rcp.views.edutirview"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.emf.texo.examples.rcp.commands.load"
                  label="load">
            </command>
            <command
                  commandId="org.eclipse.emf.texo.examples.rcp.commands.save"
                  label="save">
            </command>
            <separator
                  name="exitSeperator"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.emf.texo.examples.rcp.commands.Load"
            id="org.eclipse.emf.texo.examples.rcp.commands.load"
            name="load">
      </command>
      <command
            defaultHandler="org.eclipse.emf.texo.examples.rcp.commands.Save"
            id="org.eclipse.emf.texo.examples.rcp.commands.save"
            name="save">
      </command>
   </extension>

</plugin>
